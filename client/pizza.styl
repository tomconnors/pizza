// CSS declarations go here
.wrapper
  width 90%
  margin 0 auto

.center
  text-align center
  margin 0 auto

h1
  a
    color #000
    &:hover
      text-decoration none
      color #0f0

.slide-container
  position relative
  width 100%
  //height 1em

.slide
  position absolute
  top -.5em
  left 0
  width 1em
  height 2em
  background-color black
  border-radius .25em
  cursor move

.neck
  position absolute
  top 0
  left 0
  width 60%
  height 1em
  background-color blue
  border-radius .4em